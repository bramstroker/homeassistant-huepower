{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "library.json defines the available models and manufacturers for the powercalc integration",
    "type": "object",
    "required": [
        "manufacturers"
    ],
    "properties": {
        "manufacturers": {
            "type": "array",
            "items": {
                "type": "object",
                "description": "Manufacturer information",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the manufacturer",
                        "minLength": 1
                    },
                    "device_types": {
                        "type": "array",
                        "description": "List of possible device types",
                        "items": {
                            "$ref": "#/$defs/device_type"
                        }
                    },
                    "models": {
                        "type": "array",
                        "description": "List of models",
                        "items": {
                            "$ref": "#/$defs/model"
                        }
                    },
                    "aliases": {
                        "type": "array",
                        "description": "List of aliases for the manufacturer",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "name",
                    "models"
                ]
            }
        }
    },
    "$defs": {
        "model": {
            "type": "object",
            "required": [
                "id",
                "device_type"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Identifier of the model"
                },
                "device_type": { "$ref": "#/$defs/device_type" },
                "aliases": {
                    "type": "array",
                    "description": "List of aliases for the model",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "device_type": {
            "type": "string",
            "enum": [
                "camera",
                "light",
                "smart_switch",
                "smart_speaker",
                "network"
            ],
            "description": "Type of device"
        }
    }
}
