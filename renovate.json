{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "npm": {
    "enabled": false
  },
  "pip_requirements": {
    "enabled": false
  },
  "packageRules": [
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "matchManagers": ["poetry"],
      "enabled": false
    },
    {
      "matchManagers": ["poetry"],
      "matchFileNames": ["pyproject.toml"],
      "enabled": true
    }
  ]
}
